<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>AdminHome</servlet-name>
        <servlet-class>sevlet.AdminHomeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>sevlet.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>createBlock</servlet-name>
        <servlet-class>sevlet.createBlock</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BlockList</servlet-name>
        <servlet-class>sevlet.BlockList</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentHome</servlet-name>
        <servlet-class>sevlet.stdHomeSvlt</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StudentHome</servlet-name>
        <url-pattern>/studentHome</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminHome</servlet-name>
        <url-pattern>/AdminHome</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>createBlock</servlet-name>
        <url-pattern>/createBlock</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BlockList</servlet-name>
        <url-pattern>/BlockList</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
